<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dock"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/option_background"
    android:layout_margin="20dp"
    android:padding="10dp">

        <TextView
            android:id="@+id/dockLocation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Rua de Teste"
            android:textColor="@color/Black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/numberOfBikes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Bikes Available:"
            android:textColor="@color/Gray"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dockLocation"
            />

        <TextView
            android:id="@+id/distance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Distance:"
            android:textColor="@color/Gray"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/numberOfBikes"
            />

        <TextView
            android:id="@+id/distance_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Estimated Time:"
            android:textColor="@color/Gray"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/distance"
            />

</androidx.constraintlayout.widget.ConstraintLayout>